pipeline {
    agent any

    stages { 
        stage('Build') {
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps { 
                 sh '''
                 rm -rf node_modules package-lock.json
                 chown -R $(whoami) ~/.npm
                 npm i
                 npm run build
                 
                 '''
            }
        }
        
         
    }
}
